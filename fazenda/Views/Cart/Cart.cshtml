@{
    ViewData["Title"] = "Carrinho de Compras";
}

<!-- Banner -->
<div class="banner text-center bg-success text-white py-5">
    <h1 class="display-4">Seu Carrinho</h1>
    <p class="lead">Veja e edite os itens antes de finalizar a compra.</p>
</div>

<!-- Carrinho -->
<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <h4>Itens no Carrinho</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Produto</th>
                        <th>Preço</th>
                        <th>Quantidade</th>
                        <th>Total</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody id="cart-items">
                    <!-- Itens serão inseridos aqui via JavaScript -->
                </tbody>
            </table>
            <div class="d-flex justify-content-between">
                <button class="btn btn-danger" onclick="clearCart()">Limpar Carrinho</button>
                <h4>Total: <span id="cart-total">R$ 0,00</span></h4>
            </div>
            <div class="text-right mt-4">
                <a href="/Checkout" class="btn btn-primary">Finalizar Compra</a>
            </div>
        </div>
    </div>
</div>

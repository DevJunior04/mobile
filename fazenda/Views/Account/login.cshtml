@page
@model fazenda.Views.Account.loginModel
@{
}
<head>
  <style>
        .login-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #f7f7f7;
        }
        .login-container h2 {
            text-align: center;s
            color: #4CAF50;
        }
        /* Outras classes de estilização */
    </style>
    </head>
    <body>
<div class="login-container">
    <h2>Login</h2>
    <form asp-action="Login" method="post">
        <div>
            <label for="email">E-mail:</label>
            <input asp-for="Email" type="email" placeholder="exemplo@gmail.com" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label for="password">Senha:</label>
            <input asp-for="Password" type="password" placeholder="Digite sua senha" />
            <span asp-validation-for="Password"></span>
        </div>
        <button type="submit">Entrar</button>
        <a href="#">Esqueci minha senha</a>
    </form>
</div>
</body>
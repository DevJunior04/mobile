@model fazenda.Models.User

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <style>
        /* Os estilos podem ser iguais ao da tela de login para manter a consistência */
        body {
            font-family: Arial, sans-serif;
            background-color: #f1f1f1;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-box {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 400px;
            text-align: center;
        }

        h3 {
            margin-bottom: 20px;
            color: #333;
            font-size: 28px;
        }

        p {
            font-size: 18px;
            margin-bottom: 30px;
            color: #666;
        }

        label {
            font-weight: bold;
            display: block;
            text-align: left;
            margin-bottom: 5px;
            color: #333;
        }

        input[type="email"],
        input[type="password"],
        input[type="text"] {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            font-size: 14px;
            transition: all 0.3s ease;
        }

            input[type="email"]:focus,
            input[type="password"]:focus,
            input[type="text"]:focus {
                border-color: #4CAF50;
                outline: none;
            }

        button[type="submit"] {
            width: 100%;
            padding: 12px;
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #45a049;
                transform: scale(1.1);
                box-shadow: 0 4px 10px rgba(76, 175, 80, 0.6);
            }

        .login-link {
            margin-top: 10px;
        }

            .login-link a {
                color: #4CAF50;
                text-decoration: none;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-box">
        <h3>Cadastro</h3>
        <p>Crie sua conta</p>

        <form method="post">
            <div>
                <label for="Name">Nome:</label>
                <input asp-for="Name" type="text" placeholder="Digite seu nome" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div>
                <label for="Email">E-mail:</label>
                <input asp-for="Email" type="email" placeholder="Digite seu e-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div>
                <label for="Password">Senha:</label>
                <input asp-for="Password" type="password" placeholder="Digite sua senha" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div>
                <label for="ConfirmPassword">Confirmar Senha:</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirme sua senha" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit">Cadastrar</button>

            <div class="login-link">
                <p>Já tem uma conta? <a href="@Url.Action("Login", "Account")">Faça login</a></p>
            </div>
        </form>
    </div>
</body>
</html>

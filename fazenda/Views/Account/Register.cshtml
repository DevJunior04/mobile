@model fazenda.Models.User

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Registro</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f1f1f1;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            display: flex;
            justify-content: space-between;
            background-color: #fff;
            border-radius: 10px;
            width: 90%; /* Diminuir o tamanho da largura */
            max-width: 600px; /* Limitar ainda mais a largura */
            padding: 15px; /* Reduzir o padding interno */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Adiciona leve sombra para destaque */
        }

        .form-box {
            width: 55%; /* Ajuste proporcional à nova largura */
        }

        .checkbox-box {
            width: 40%;
            padding-left: 15px;
        }

        h3 {
            margin-bottom: 15px;
            color: #333;
            font-size: 20px;
        }

        p {
            font-size: 14px;
            margin-bottom: 10px;
            color: #666;
        }

        label {
            font-weight: bold;
            display: block;
            text-align: left;
            margin-bottom: 5px;
            color: #333;
        }

        input[type="email"],
        input[type="password"],
        input[type="text"],
        input[type="tel"] {
            width: 100%;
            padding: 8px;
            margin: 8px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            font-size: 14px;
        }

        button[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 14px;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #45a049;
                transform: scale(1.05);
                box-shadow: 0 4px 10px rgba(76, 175, 80, 0.6);
            }

        .checkbox-item {
            margin-bottom: 10px;
        }

            .checkbox-item input {
                margin-right: 10px;
            }

    </style>
</head>
<body>
    <div class="container">
        <div class="form-box">
            <h3>Cadastro</h3>
            <form method="post">
                <div>
                    <label for="Name">Nome:</label>
                    <input asp-for="Name" type="text" placeholder="Digite seu nome" />
                </div>

                <div>
                    <label for="NomeFantasia">Nome Fantasia:</label>
                    <input asp-for="NomeFantasia" type="text" placeholder="Digite o nome fantasia" />
                </div>

                <div>
                    <label for="NomeSocial">Nome Social:</label>
                    <input asp-for="NomeSocial" type="text" placeholder="Digite o nome social" />
                </div>

                <div>
                    <label for="CPF">CPF:</label>
                    <input asp-for="CPF" type="text" placeholder="Digite o CPF" />
                </div>

                <div>
                    <label for="CNPJ">CNPJ:</label>
                    <input asp-for="CNPJ" type="text" placeholder="Digite o CNPJ" />
                </div>

                <div>
                    <label for="Email">E-mail:</label>
                    <input asp-for="Email" type="email" placeholder="meu oau" />
                </div>

                <div>
                    <label for="Telefone">Telefone:</label>
                    <input asp-for="Telefone" type="tel" placeholder="Digite seu telefone" />
                </div>

                <div>
                    <label for="Password">Senha:</label>
                    <input asp-for="Password" type="password" placeholder="Digite sua senha" />
                </div>

                <div>
                    <label for="ConfirmPassword">Confirmar Senha:</label>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirme sua senha" />
                </div>

                <button type="submit">Cadastrar</button>
            </form>
        </div>

        <div class="checkbox-box">
            <h3>AUTORIZO RECEBER OFERTAS E NOVIDADES POR</h3>
            <div class="checkbox-item">
                <input type="checkbox" id="email" />
                <label for="email">Aceito receber comunicações por E-mail</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="sms" />
                <label for="sms">Aceito receber comunicações por SMS</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="whatsapp" />
                <label for="whatsapp">Aceito receber comunicações por WhatsApp</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="termos" />
                <label for="termos">Aceito os Termos e Condições de Uso</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="privacidade" />
                <label for="privacidade">Aceito a Política de Privacidade</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="bemQuerer" />
                <label for="bemQuerer">Participe do Cliente Bem Querer e garanta benefícios exclusivos</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="regulamento" />
                <label for="regulamento">Aceito o regulamento do Cliente Bem Querer</label>
            </div>
        </div>
    </div>
</body>
</html>

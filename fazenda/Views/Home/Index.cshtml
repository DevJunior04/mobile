<script>
    function addToFavorites(productName) {
        // Salva o produto no localStorage (ou você pode usar outra lógica de backend).
        let favorites = JSON.parse(localStorage.getItem('favorites')) || [];
        if (!favorites.includes(productName)) {
            favorites.push(productName);
            localStorage.setItem('favorites', JSON.stringify(favorites));
            alert(`${productName} foi adicionado aos favoritos!`);
        } else {
            alert(`${productName} já está na lista de favoritos.`);
        }

        // Redireciona para a página de favoritos
        window.location.href = '/Favorites/Index';
    }
</script>
